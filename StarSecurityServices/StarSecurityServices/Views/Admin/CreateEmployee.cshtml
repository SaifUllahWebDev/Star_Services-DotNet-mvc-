@model StarSecurityServices.Models.Employee
@{
    ViewBag.Title = "Add Employee";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />


@* NAVBAR CODE *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="d-flex min-vh-100">
    @await Html.PartialAsync("_SidebarPartial")

    <div class="flex-grow-1 p-4">
        @* Main content goes here *@
        <div class="container mt-5">
            <h2>➕ Add New Employee</h2>

            <form asp-action="CreateEmployee" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EmployeeCode" class="form-label"></label>
                        <input asp-for="EmployeeCode" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ContactNumber" class="form-label"></label>
                        <input asp-for="ContactNumber" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Department" class="form-label"></label>
                        <input asp-for="Department" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Client" class="form-label"></label>
                        <input asp-for="Client" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Role" class="form-label"></label>
                        <select asp-for="Role" class="form-select">
                            <option value="Admin">Admin</option>
                            <option value="Employee">Employee</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Grade" class="form-label"></label>
                        <input asp-for="Grade" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label asp-for="Qualification" class="form-label"></label>
                        <input asp-for="Qualification" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Password</label>
                        <input name="PasswordHash" class="form-control" type="password" required />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Save</button>
                <a asp-action="Employees" class="btn btn-secondary mt-3 ms-2">Cancel</a>
            </form>
        </div>

    </div>
</div>



