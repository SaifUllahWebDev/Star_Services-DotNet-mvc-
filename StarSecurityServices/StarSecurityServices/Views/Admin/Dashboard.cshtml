@{
    ViewBag.Title = "Admin Dashboard";
    Layout = null;
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="d-flex min-vh-100">
    @await Html.PartialAsync("_SidebarPartial")

    <div class="flex-grow-1 p-4">
        @* Main content goes here *@
        <div class="p-5 w-100">
            <h2 class="mb-4 fw-semibold">
                Welcome to Admin Dashboard @if (Context.Session.GetString("UserName") != null)
                {
                    <p>Welcome, @Context.Session.GetString("UserName")!</p>
                }
            </h2>

            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm text-bg-primary">
                        <div class="card-body text-center">
                            <h5 class="card-title">Guard Bookings</h5>
                            <p class="display-6 fw-bold">@ViewBag.GuardBookings</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm text-bg-success">
                        <div class="card-body text-center">
                            <h5 class="card-title">Cash Services</h5>
                            <p class="display-6 fw-bold">@ViewBag.CashBookings</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm text-bg-warning text-white">
                        <div class="card-body text-center">
                            <h5 class="card-title">Recruitment Apps</h5>
                            <p class="display-6 fw-bold">@ViewBag.RecruitmentApps</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm text-bg-danger">
                        <div class="card-body text-center">
                            <h5 class="card-title">Electronic Requests</h5>
                            <p class="display-6 fw-bold">@ViewBag.ElectronicRequests</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




