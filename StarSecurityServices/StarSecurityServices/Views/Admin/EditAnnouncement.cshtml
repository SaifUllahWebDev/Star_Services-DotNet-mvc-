@model StarSecurityServices.Models.RecruitmentAnnouncement
@{
    ViewBag.Title = "Edit Recruitment Announcement";
    Layout = null;
}

@* NAVBAR CODE *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="d-flex min-vh-100">
    @await Html.PartialAsync("_SidebarPartial")

    <div class="flex-grow-1 p-4">
        @* Main content goes here *@
        <div class="container my-5">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">✏️ Edit Recruitment Announcement</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="EditAnnouncement" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control shadow-sm" placeholder="Update training title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="4" placeholder="Update training details..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TrainingDate" class="form-label fw-semibold">Start Date</label>
                                <input asp-for="TrainingDate" type="date" class="form-control shadow-sm" />
                                <span asp-validation-for="TrainingDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label fw-semibold">End Date</label>
                                <input asp-for="EndDate" type="date" class="form-control shadow-sm" />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label fw-semibold"></label>
                            <input asp-for="Location" class="form-control shadow-sm" placeholder="Update location" />
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Recruitments" class="btn btn-secondary px-4">↩ Back</a>
                            <button type="submit" class="btn btn-success px-4">💾 Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>



   
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

