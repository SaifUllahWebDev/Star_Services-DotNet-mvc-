@model IEnumerable<StarSecurityServices.Models.Employee>
@{
    ViewBag.Title = "Employee List";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

@* NAVBAR CODE *@

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="d-flex min-vh-100">
    @await Html.PartialAsync("_SidebarPartial")

    <div class="flex-grow-1 p-4">
        @* Main content goes here *@
        <div class="container mt-5">
            <h2 class="mb-4">👨‍💼 Employee List</h2>

            <a asp-action="CreateEmployee" class="btn btn-primary mb-3">➕ Add New Employee</a>

            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Department</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.FullName</td>
                            <td>@emp.EmployeeCode</td>
                            <td>@emp.Email</td>
                            <td>@emp.ContactNumber</td>
                            <td>@emp.Department</td>
                            <td>@emp.Role</td>
                            <td>
                                <a asp-action="EditEmployee" asp-route-id="@emp.Id" class="btn btn-sm btn-warning">✏️ Edit</a>

                                <form asp-action="DeleteEmployee" asp-route-id="@emp.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this employee?')">🗑️ Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>



