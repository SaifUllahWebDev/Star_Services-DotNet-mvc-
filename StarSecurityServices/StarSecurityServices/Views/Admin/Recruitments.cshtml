@model IEnumerable<StarSecurityServices.Models.RecruitmentAnnouncement>
@{
    ViewBag.Title = "Recruitments";
    Layout = null;
}

@* NAVBAR CODE *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="d-flex min-vh-100">
    @await Html.PartialAsync("_SidebarPartial")

    <div class="flex-grow-1 p-4">
        @* Main content goes here *@
        <div class="container mt-5">
            <h2 class="mb-4">📢 Recruitment Announcements</h2>
            <a asp-action="CreateAnnouncement" class="btn btn-primary mb-3">➕ Create New Announcement</a>

            <table class="table table-bordered table-striped">
                <thead class="table-primary">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.TrainingDate.ToShortDateString()</td>
                            <td>@item.EndDate.ToShortDateString()</td>
                            <td>@item.Location</td>
                            <td>
                                <a asp-action="EditAnnouncement" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                                <a asp-action="DeleteAnnouncement" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-2">🗑️ Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>




