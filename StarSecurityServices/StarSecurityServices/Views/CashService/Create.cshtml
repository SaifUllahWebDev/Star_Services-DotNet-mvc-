@model StarSecurityServices.Models.CashServiceBooking

@{
    ViewData["Title"] = "Book Cash Service";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


<div class="d-flex min-vh-100">
    @await Html.PartialAsync("_EmployeeLayout")

    <div class="flex-grow-1 p-4">
        @* Main content goes here *@

        <h2 class="mb-4">Book a Cash Service</h2>

        <form asp-action="Create" method="post" class="p-4 border rounded shadow bg-light">
            @Html.AntiForgeryToken()

            <!-- Service Type -->
            <div class="form-group mb-3">
                <label asp-for="ServiceType" class="form-label"></label>
                <select asp-for="ServiceType" class="form-control">
                    <option value="">Select Service Type</option>
                    <option value="Cash Transfer">Cash Transfer</option>
                    <option value="ATM Replenishment">ATM Replenishment</option>
                </select>
                <span asp-validation-for="ServiceType" class="text-danger"></span>
            </div>

            <!-- Amount -->
            <div class="form-group mb-3">
                <label asp-for="Amount" class="form-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <!-- Source Location -->
            <div class="form-group mb-3">
                <label asp-for="SourceLocation" class="form-label"></label>
                <input asp-for="SourceLocation" class="form-control" />
                <span asp-validation-for="SourceLocation" class="text-danger"></span>
            </div>

            <!-- Destination Location -->
            <div class="form-group mb-3">
                <label asp-for="DestinationLocation" class="form-label"></label>
                <input asp-for="DestinationLocation" class="form-control" />
                <span asp-validation-for="DestinationLocation" class="text-danger"></span>
            </div>

            <!-- Requested Date -->
            <div class="form-group mb-3">
                <label asp-for="RequestedDate" class="form-label"></label>
                <input asp-for="RequestedDate" type="date" class="form-control" />
                <span asp-validation-for="RequestedDate" class="text-danger"></span>
            </div>

            <!-- Instructions (Optional) -->
            <div class="form-group mb-4">
                <label asp-for="Instructions" class="form-label"></label>
                <textarea asp-for="Instructions" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit Request</button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
