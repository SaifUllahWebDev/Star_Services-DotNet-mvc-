<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarSecurityServices</title>
    
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    @RenderSection("Styles", required: false)

<link href="~/assets/css/main.css" rel="stylesheet">
</head>

<body>
    <header id="header" class="header sticky-top">



        <div class="branding d-flex align-items-center">

            <div class="container position-relative d-flex align-items-center justify-content-between">
                <a href="index.html" class="logo d-flex align-items-center me-auto">
                    <!-- Uncomment the line below if you also wish to use an image logo -->
                    <!-- <img src="assets/img/logo.png" alt=""> -->
                    <h1 class="sitename">Star Securities</h1>
                </a>

                <nav id="navmenu" class="navmenu">
                    <ul>
                        <li><a href="#about">About</a></li>
                        <li class="dropdown">
                            <a href="#"><span>Business</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                            <ul>
                                <li><a href="#">Manned guarding</a></li>
                                <li><a href="#">Cash Services</a></li>
                                <li><a href="#">Recruitment and training</a></li>
                                <li><a href="#">Electronic security systems</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#"><span>Network</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                            <ul>
                                <li><a asp-controller="Home" asp-action="NorthRegion">North region</a></li>
                                <li><a asp-controller="Home" asp-action="WestRegion">West region</a></li>
                                <li><a asp-controller="Home" asp-action="EastRegion">East region</a></li>
                                <li><a asp-controller="Home" asp-action="SouthRegion">South region</a></li>
                            </ul>
                        </li>
                        <li><a asp-controller="Home" asp-action="AvailableVacancies">Career</a></li>
                        <li><a href="#doctors">Clients</a></li>
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>

                <a class="cta-btn d-none d-sm-block" asp-controller="Auth" asp-action="Login">Login</a>

            </div>

        </div>

    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="footer light-background">

        <div class="container footer-top">
            <div class="row gy-4">

                <!-- Company Info -->
                <div class="col-lg-4 col-md-6 footer-about">
                    <a href="index.html" class="logo d-flex align-items-center">
                        <span class="sitename">Star Securities</span>
                    </a>
                    <div class="footer-contact pt-3">
                        <p>Office # 12, Security Plaza</p>
                        <p>Karachi, Pakistan</p>
                        <p class="mt-3"><strong>Phone:</strong> <span>+92 300 1234567</span></p>
                        <p><strong>Email:</strong> <span>contact@starsecurities.com</span></p>
                    </div>
                    <div class="social-links d-flex mt-4">
                        <a href="#"><i class="bi bi-twitter-x"></i></a>
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <!-- Useful Links -->
                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Useful Links</h4>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Our Services</a></li>
                        <li><a href="#">Terms & Conditions</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- Security Services -->
                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Our Services</h4>
                    <ul>
                        <li><a href="#">Physical Security</a></li>
                        <li><a href="#">Surveillance Systems</a></li>
                        <li><a href="#">Event Security</a></li>
                        <li><a href="#">VIP Protection</a></li>
                        <li><a href="#">Security Consultancy</a></li>
                    </ul>
                </div>

                <!-- Quick Access -->
                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Quick Access</h4>
                    <ul>
                        <li><a href="#">Join Our Team</a></li>
                        <li><a href="#">Client Login</a></li>
                        <li><a href="#">Security Tips</a></li>
                        <li><a href="#">FAQs</a></li>
                        <li><a href="#">Get a Quote</a></li>
                    </ul>
                </div>

                <!-- Resources -->
                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Resources</h4>
                    <ul>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Media Center</a></li>
                        <li><a href="#">Case Studies</a></li>
                        <li><a href="#">Downloads</a></li>
                        <li><a href="#">Support</a></li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="container copyright text-center mt-4">
            <p>© <span>Copyright</span> <strong class="px-1 sitename">Star Securities</strong> <span>All Rights Reserved</span></p>
            <div class="credits">
                Designed by <a href="#">Star Security</a> • Distributed by <a href="#">Nestem</a>
            </div>
        </div>

    </footer>
    
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
