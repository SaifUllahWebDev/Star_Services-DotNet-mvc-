@model StarSecurityServices.Models.Vacancy

@{
    ViewData["Title"] = "Delete Vacancy";
    Layout = null; // or set to null if it's standalone
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


<div class="d-flex min-vh-100">
    @await Html.PartialAsync("_SidebarPartial")

    <div class="flex-grow-1 p-4">
        @* Main content goes here *@
        <div class="container mt-5">
            <h2 class="text-danger mb-4">Are you sure you want to delete this job vacancy?</h2>

            <dl class="row">
                <dt class="col-sm-3">Title:</dt>
                <dd class="col-sm-9">@Model.JobTitle</dd>

                <dt class="col-sm-3">Region:</dt>
                <dd class="col-sm-9">@Model.Region</dd>

                <dt class="col-sm-3">Salary:</dt>
                <dd class="col-sm-9">@Model.Salary.ToString("N0") PKR</dd>

                <dt class="col-sm-3">Timing:</dt>
                <dd class="col-sm-9">@Model.Timing</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    @if (Model.IsFilled)
                    {
                        <span class="badge bg-danger">Filled</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Open</span>
                    }
                </dd>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <dt class="col-sm-3">Image:</dt>
                    <dd class="col-sm-9">
                        <img src="~/uploads/@Model.ImagePath" class="img-thumbnail" style="max-width: 150px;" />
                    </dd>
                }
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>


