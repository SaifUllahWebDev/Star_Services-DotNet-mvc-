@model StarSecurityServices.Models.Vacancy
@{
    ViewData["Title"] = "Edit Vacancy";
    Layout = null;
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


<div class="d-flex min-vh-100">
    @await Html.PartialAsync("_SidebarPartial")

    <div class="flex-grow-1 p-4">
        @* Main content goes here *@
        <div class="container mt-5">
            <h2>Edit Job Vacancy</h2>

            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImagePath" />

                <div class="mb-3">
                    <label asp-for="JobTitle" class="form-label"></label>
                    <input asp-for="JobTitle" class="form-control" />
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Region" class="form-label"></label>
                    <select asp-for="Region" class="form-select">
                        <option value="">-- Select Region --</option>
                        <option>North</option>
                        <option>South</option>
                        <option>East</option>
                        <option>West</option>
                    </select>
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label"></label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Timing" class="form-label"></label>
                    <input asp-for="Timing" class="form-control" />
                    <span asp-validation-for="Timing" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Replace Image (optional)</label>
                    <input type="file" name="ImageFile" class="form-control" />
                </div>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mb-3">
                        <img src="~/uploads/@Model.ImagePath" width="100" class="img-thumbnail" alt="Current Image" />
                    </div>
                }

                <div class="form-check mb-3">
                    <input asp-for="IsFilled" class="form-check-input" />
                    <label asp-for="IsFilled" class="form-check-label">Mark as Filled</label>
                </div>

                <button type="submit" class="btn btn-primary">Update Vacancy</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
